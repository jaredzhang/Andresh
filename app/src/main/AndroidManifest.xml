<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.testanimatetextviewcolor.app" >

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.testanimatetextviewcolor.app.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.testanimatetextviewcolor.app.AnimateTextColorActivity"
            android:label="@string/title_activity_animate_text_color" >
        </activity>
        <activity
            android:name="com.example.testanimatetextviewcolor.app.RotateDrawableActivity"
            android:label="@string/title_activity_rotate_drawable" >
        </activity>
        <activity
            android:name="com.example.testanimatetextviewcolor.app.ParseXMLToBundle"
            android:label="@string/title_activity_parse_xmlto_bundle" >
        </activity>
    </application>

</manifest>
